@model IEnumerable<Student>
@{
    ViewData["Title"] = "Listele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ogrenci Listesi</h1>
@if(Model.Count()==0)
{
    <div class="alert alert-danger" role="alert">
        Kayıt Bulunamadı..!
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ogrenci Ad</th>
                <th scope="col">Soyad</th>
                <th scope="col">Cinsiyet</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ID</th>
                    <td>@item.Name &nbsp; @item.SureName</td>
                    <td>@item.Gender</td>
                    <td><a asp-controller="Student" asp-action="Guncelle" asp-route-id="@item.ID" class="btn btn-success">Guncelle</a></td>
                    <td><a asp-controller="Student" asp-action="Sil" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                </tr>

            }


        </tbody>
    </table>

   
}

<a asp-controller="Student" asp-action="Ekle" class="btn btn-outline-success">yeni ogrenci</a>


