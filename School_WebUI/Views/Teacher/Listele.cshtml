@model IEnumerable<Teacher>
@{
    ViewData["Title"] = "Listele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ogretmen Listesi</h1>

@if(Model.Count()==0)
{

    <div class="alert alert-danger" role="alert">
        Kayıt Bulunamadı..!
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ogretmen Adi</th>
                <th scope="col">Soyadi</th>
                <th scope="col">Ders ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ID</th>
                    <td>@item.TeacherName</td>
                    <td>@item.TeacherSurname</td>
                    <td>@item.LessonID</td>
                    <td><a asp-controller="Teacher" asp-action="Guncelle" asp-route-id="@item.ID" class="btn btn-success">Guncelle</a></td>
                    <td><a asp-controller="Teacher" asp-action="Sil" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                </tr>
            }



        </tbody>
    </table>
}
<a asp-controller="Teacher" asp-action="Ekle" class="btn btn-outline-success">yeni ogretmen</a>


